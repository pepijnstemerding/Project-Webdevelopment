@page "{Boekid}"
@model WebDevStripboeken.Pages.Bezit

@{
Layout = "_Layout";
ViewData["Title"] = "Your Collections";
ViewData["User"] = @Model.currentUser.Gebruikersnaam;
}

<div class="row">
    <h2>Een stripboek aan je account toevoegen</h2>
    <form method="post" id="BoekToevoegen" name="BoekToevoegen">
        @{
            if (Model.toevoegenboek == null)
            {
                <div class="input-group mb-3">
                    <input type="text" class="form-control" id="locatie" name="Locatie" asp-for="toevoegenboek.Locatie" value="" placeholder="Waar bewaart u het stripboek?"/>
                </div>
                <div class="input-group mb-3">
                    <input type="text" class="form-control" id="status" name="Status_exemplaar" asp-for="toevoegenboek.Status_exemplaar" value="" placeholder="In welke status is het exemplaar?"/>
                </div>
                <div class="input-group mb-3">
                    <input type="double" class="form-control" id="gekochtvoor" name="Gekocht_voor" asp-for="toevoegenboek.Gekocht_voor" value="" placeholder="Hoeveel heeft u er voor betaalt?"/>
                </div>
                <input type="hidden" id="Gebruiker" name="Gebruiker" value="@Model.currentUser.Gebruikersnaam"/>
                <input type="hidden" id="Boek_id" name="Boek_id" asp-for="toevoegenboek.Boek_id" value="@Model.currentBoek.Boek_id"/>
                <button onclick="succesnotif()" class="btn btn-outline-secondary" type="submit" asp-page-handler="BoekToevoegen"><i class="fa-solid fa-magnifying-glass"></i>Toevoegen</button>
            }
            else
            {
                <div class="input-group mb-3">
                    <input type="text" class="form-control" id="locatie" name="Locatie" asp-for="toevoegenboek.Locatie" value="@Model.toevoegenboek.Locatie" placeholder="Waar bewaart u het stripboek?"/>
                </div>
                <div class="input-group mb-3">
                    <input type="text" class="form-control" id="status" name="Status_exemplaar" asp-for="toevoegenboek.Status_exemplaar" value="@Model.toevoegenboek.Status_exemplaar" placeholder="In welke status is het exemplaar?"/>
                </div>
                <div class="input-group mb-3">
                    <input type="double" class="form-control" id="gekochtvoor" name="Gekocht_voor" asp-for="toevoegenboek.Gekocht_voor" value="@Model.toevoegenboek.Gekocht_voor" placeholder="Hoeveel heeft u er voor betaalt?"/>
                </div>
                <input type="hidden" id="Gebruiker" name="Gebruiker" value="@Model.currentUser.Gebruikersnaam"/>
                <input type="hidden" id="Boek_id" name="Boek_id" asp-for="toevoegenboek.Boek_id" value="@Model.currentBoek.Boek_id"/>
                <!--<button onclick="icry(@Model.status)" class="btn btn-outline-secondary" type="submit" asp-page-handler="BoekUpdate"><i class="fa-solid fa-magnifying-glass"></i>Update</button>-->
                <button onclick="sadge()" class="btn btn-outline-secondary" type="submit" asp-page-handler="BoekUpdate"><i class="fa-solid fa-magnifying-glass"></i>Update</button>
            }
        }
    </form>
</div>

<script>
    function succesnotif(){
        alert("Succesvol toegevoegd aan account!")
    }
    function sadge() {
        alert("Informatie successvol geupdate!")
    }
    function icry(Bool){
        if (Bool == true)
            {
                alert("Informatie succesvol geupdate!")
            }
        else if (Bool == false)
            {
                alert("Er is iets mis gegaan.")
            }
    }
</script>



